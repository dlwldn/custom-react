{
  "compilerOptions": {
    "esModuleInterop": true, // import * as React from 'react';  -> import React from 'react';
    "sourceMap": true, // 에러났을때 원래 에러난 위치 찾아갈때 편함 
    "lib": ["ES2022", "DOM"],
    "jsx": "react",
    "module": "esnext", // 최신 모듈 쓰겠다. import export
    "moduleResolution": "Node",
    "target": "es5", // es5로 변환
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@hooks/*": ["hooks/*"],
      "@components/*": ["components/*"],
      "@layouts/*": ["layouts/*"],
      "@pages/*": ["pages/*"],
      "@utils/*": ["utils/*"],
      "@typings/*": ["typings/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "Node",
      "target": "es5",
      "esModuleInterop": true
    }
  }
}